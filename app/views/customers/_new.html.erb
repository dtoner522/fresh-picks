<% @vegboxes.each do |box| %>
  <%= simple_form_for @customer do |f| %>
    <% customer_type = box.status ? "purchase" : "waitlist" %>

    <%= f.input :name %>
    <%= f.input :email,
                :error_html => { id: "wrong-email" } %>
    <%= f.input :phone %>
    <!-- <%= f.hidden_field :customer_type, :value => "waitlist"  %> -->

    <%= f.hidden_field :customer_type, :value => customer_type  %>
    <%= f.error :email, id: "wrong-email" %>
    <%= submit_tag 'Send', class: 'btn btn-primary' %>
  <% end %>
<%end %>