<%= simple_form_for @customer do |f| %>
  
  <% if !@vegboxes  %>
    <% customer_type = "extraveg" %>
  <% else %>
    <% @vegboxes.each do |box| %>
      <% customer_type = box.status ? "purchase" : "waitlist" %>
    <%end %>
  <% end %>

  <%= f.input :name %>
  <%= f.input :email,
              :error_html => { id: "wrong-email" } %>
  <%= f.input :phone,
              :error_html => { id: "wrong-phone" } %>
  <%= f.hidden_field :customer_type, :value => customer_type  %>

  <%= submit_tag 'Send', class: 'btn btn-primary' %>
<% end %>
