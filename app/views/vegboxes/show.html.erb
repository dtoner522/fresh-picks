<div class="container py-3">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <%# <%= image_tag(@teddy.photo_url, width: '100%') %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h1><%= @vegbox.name %></h1>
      <p><%= humanized_money_with_symbol(@vegbox.price) %></p>
      <p>Some awesome description of our amazing teddy.</p>
      <p>$$$</p>
    </div>

        <%# need to fix params here - regex etc %>

    <%= simple_form_for @order do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email %>
      <%= f.input :phone_number %>
      <%= f.input :address_line_1 %>
      <%= f.input :address_line_2 %>
      <%= f.input :postcode %>
      <%= f.hidden_field :amount, value: @vegbox.price %>
      <%= f.hidden_field :name, value: @vegbox.name %>
      <%= f.hidden_field :state, value: "pending" %>

      <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
    <% end %>

  </div>
</div>