
<div class="extraveg">
  <div class="extraveg-content">
    <h2>Extra Veggies</h2>
    <p>Every week you can find our excess veggies here for one off-purchases!</p>
  
  </div>
  <div class="cards-extraveg">
      <% @extravegs.each do |extraveg| %>
        <% extraveg.id %>
        <% extraveg.category %>
          <% if extraveg.category == 'large'%>
            <div class="card-extraveg">
              <h4>Large veg box</h4>
              <p>Price is £7.00</p>
              <h4><%= extraveg.name %></h4>
              <p><%= extraveg.description %></p>
            </div>
          <% elsif extraveg.category == 'medium' %> 
            <div class="card-extraveg">
              <h4>Medium veg box</h4>
              <p>Price is £5.00</p>
              <h4><%= extraveg.name %></h4>
              <p><%= extraveg.description %></p>
            </div>
          <% else %>
            <div class="card-extraveg">
              <h4>Small veg box</h4>
              <p>Price is £3.00</p>
              <h4><%= extraveg.name %></h4>
              <p><%= extraveg.description %></p>
            </div>
          <% end %>
      <% end %>
  </div>
  <%= link_to "Order now", "extravegs", class: "btn btn-fp" %>
</div>