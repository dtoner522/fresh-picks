
<div class="navbar navbar-expand-sm navbar-mt">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "FreshPicks_WordmarkIcon_Colour_Alt.png", class:"img-logo" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Vegboxes", root_path + "#product", class: "nav-link" %>
          <%= link_to "Order now", vegboxes_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "FreshPicks_WordmarkIcon_Colour_Alt.png", class: "avatar-square dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Vegboxes", root_path + "#product", class: "nav-link" %>
          <%# <%= link_to "About us", root_path + "#about", class: "nav-link" %>
          <%= link_to "Order now", vegboxes_path, class: "nav-link" %>
          <%#= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
