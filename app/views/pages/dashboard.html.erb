<div class="container">
  <h1>Orders</h1>
    <% @orders.each do |order| %>
      <div class="order-card">
        <p id="title">#<%= order.id %> / <%= order.name%> / â‚¬<%= order.amount_cents / 100%></p>

        <p><strong>Customer: <%= order.first_name %> <%= order.last_name %></strong></p>
        <p><strong>Status:</strong> <%= order.state %> | <strong>Purchased at:</strong> <%= order.created_at.strftime("%d %B %Y, %H:%M") %></p>
        <p><strong>Email:</strong> <a href="<%= order.email %>"><%= order.email %></a> | <strong>Phone:</strong> <%= order.phone_number %></p>
